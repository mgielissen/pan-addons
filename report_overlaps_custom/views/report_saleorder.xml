<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_new_custom_overlap" inherit_id="sale.report_saleorder_document">
    <xpath expr="//tr[@t-foreach='o.order_line']" position="replace">
        <tr t-foreach="o.order_line" t-as="l" style="page-break-inside: avoid !important;">
            <td>
               <span t-field="l.name"/>
            </td>
            <td class="text-right">
                <span t-field="l.product_uom_qty"/>
                <span groups="product.group_uom" t-field="l.product_uom"/>
            </td>
            <td class="text-right">
                <span t-field="l.price_unit"/>
            </td>
            <td groups="sale.group_discount_per_so_line">
                <span t-field="l.discount"/>
            </td>
            <td class="text-right">
                <span t-field="l.price_subtotal"
                    t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
            </td>
       </tr>
    </xpath>
</template>
</data>
</openerp>

