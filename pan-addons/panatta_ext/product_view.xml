<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
           
           <record model="ir.ui.view" id="product_product_form_view_procurment">
                <field name="name">product.product.form.view.procurment</field>
                <field name="model">product.product</field>
                <field name="inherit_id" ref="product.product_normal_form_view" />
                <field name="arch" type="xml">
                    <xpath expr="//notebook/page[@string='Procurements']" position="attributes">
                        <attribute name="groups">panatta_ext.group_procurements_tab1</attribute>
                    </xpath>
                </field>
            </record><!--
            
-->           <record model="ir.ui.view" id="product_template_form_view_procurment">
                <field name="name">product.template.form.view.procurment</field>
                <field name="model">product.template</field>
                <field name="inherit_id" ref="product.product_template_form_view" />
                <field name="arch" type="xml">
                    <xpath expr="//notebook/page[@string='Procurements']" position="attributes">
                        <attribute name="groups">panatta_ext.group_procurements_tab1</attribute>
                    </xpath>
                </field>
            </record>
            
            <record id="edit_task_modify_tree" model="ir.ui.view">
            <field name="name">project.project.task.modify.tree</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_end']" position="after">
                    <field name="date_deadline"/>
                 </xpath>
                <xpath expr="//field[@name='progress']" position="replace"/>

            </field>
        </record>
            
                
    </data>
</openerp>
