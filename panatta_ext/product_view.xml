<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
            <record id = "res_partner_base_vehicle_inherit_view" model="ir.ui.view">
            <field name="name">res.partner.base.vehicle.inherit.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="replace"/>
                
                <xpath expr="//field[@name='company_id']" position="before">
                    <field name="user_id"/>
                </xpath>
            </field>
        </record> 

           <record model="ir.ui.view" id="product_product_form_view_procurment">
                <field name="name">product.product.form.view.procurment</field>
                <field name="model">product.product</field>
                <field name="inherit_id" ref="product.product_normal_form_view" />
                <field name="arch" type="xml">
                    <xpath expr="//notebook/page[@string='Procurements']" position="attributes">
                        <attribute name="groups">panatta_ext.group_procurements_tab1</attribute>
                    </xpath>
                </field>
            </record><!--
            
-->           <record model="ir.ui.view" id="product_template_form_view_procurment">
                <field name="name">product.template.form.view.procurment</field>
                <field name="model">product.template</field>
                <field name="inherit_id" ref="product.product_template_form_view" />
                <field name="arch" type="xml">
                    <xpath expr="//notebook/page[@string='Procurements']" position="attributes">
                        <attribute name="groups">panatta_ext.group_procurements_tab1</attribute>
                    </xpath>
                </field>
            </record>
            
            <record id="edit_task_modify_tree" model="ir.ui.view">
            <field name="name">project.project.task.modify.tree</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_end']" position="after">
                    <field name="date_deadline"/>
                 </xpath>
                <xpath expr="//field[@name='progress']" position="replace"/>

            </field>
        </record>
    
        <record id="action_partner_form_all" model="ir.actions.act_window">
            <field name="name">All Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_customer":1}</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your address book.
              </p><p>
                Odoo helps you easily track all activities related to
                a customer; discussions, history of business opportunities,
                documents, etc.
              </p>
            </field>
        </record>
        <record id="action_partner_form_view11" model="ir.actions.act_window.view">
            <field eval="0" name="sequence"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="base.res_partner_kanban_view"/>
            <field name="act_window_id" ref="action_partner_form_all"/>
        </record>
        <record id="action_partner_form_view22" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="base.view_partner_form"/>
            <field name="act_window_id" ref="action_partner_form_all"/>
        </record>
        <record id="action_partner_tree_view10" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="base.view_partner_tree"/>
            <field name="act_window_id" ref="action_partner_form_all"/>
        </record>
        <menuitem id="menu_partner_form" parent="base.menu_sales" action="action_partner_form_all" sequence="3" groups="group_see_all_customer" />
        
        <record id="action_partner_form" model="ir.actions.act_window">
            <field name="name">My Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_customer":1}</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="domain">[('user_id','=',uid)]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your address book.
              </p><p>
                Odoo helps you easily track all activities related to
                a customer; discussions, history of business opportunities,
                documents, etc.
              </p>
            </field>
        </record>
                
    </data>
</openerp>
