<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_presupuesto_completo_sinv_document">
       <div class="header">
        </div>

        <div class="footer">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline">
                    <li>P치gina:</li>
                    <li><span class="page"/></li>
                    <li>/</li>
                    <li><span class="topage"/></li>
                </ul>
            </div>
            
        </div>
    
        <div class="page">
            <div class="oe_structure"/>

            <div class="row" style="border-bottom: 1px solid black;">
                <div class="col-xs-6 col-xs-offset-3 text-center">
                    <img src="/web/binary/company_logo?db=panatta_db&amp;company=1" data-pin-nopin="true"/>
                    <h1>PRESUPUESTO</h1>
                    <h2 style="font-size: 140%;margin-top:5px;">Panatta Dise침o Comercial</h2>
                </div>
            </div>
            <div class="row" style="margin-top: 200px;">
                <div class="col-xs-6 col-xs-offset-3">
                    <table class="table table-condensed">
                        <tr>
                            <td><strong>Cliente Potencial</strong></td>
                            <td class="text-right">
                                <span t-field="o.partner_id" />
                            </td>
                        </tr>
                        <tr>
                            <td><strong>
                                <span t-if="o.state not in ['draft','sent']">Pedido de Venta</span>
                                <span t-if="o.state in ['draft','sent']">Presupuesto</span>
                            </strong></td>
                            <td class="text-right">
                                <span t-field="o.name"/>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Comercial</strong></td>
                            <td class="text-right">
                                <span t-field="o.user_id.name" />
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Fecha</strong></td>
                            <td class="text-right">
                                <span t-field="o.write_date" t-field-options="{&quot;format&quot;: &quot;dd/MM/yyyy&quot;}" />
                            </td>
                        </tr>
                        <tr t-if="o.client_order_ref">
                            <td><strong>Referencia</strong></td>
                            <td class="text-right">
                                <span t-field="o.client_order_ref"/>
                            </td>
                        </tr>
                        
                    </table>
                </div>
            </div>

            <p style="page-break-before:always;"> </p>

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th></th>
                        <th>Descripci칩n</th>
                    </tr>
               </thead>
               <tbody class="sale_tbody">
                    <tr t-foreach="o.order_line" t-as="l" style="page-break-inside: avoid !important; ">
                        <td t-if="o.print_product_image" style="min-height:350px;padding-bottom:120px;">
                            <img t-if="l.product_image" t-att-src="'data:image/png;base64,%s' % l.product_image" style="max-height: 300px; max-width: 300px;"/>
                        </td>
                        <td>
                            <div class="row" style="min-height:300px;max-height:300px;">
                                <div class="col-xs-12">
                                    <span t-field="l.name" style="font-size:90%;"/>
                                </div>                                
                            </div>
                            <div class="row">
                                <div class="col-xs-12 text-right">
                                    <span style="margin-right:30px;font-size:90%;" t-field="l.product_uom_qty"/>
                                    <span groups="product.group_uom" t-field="l.product_uom"/>
                                </div>                                
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>

            <p style="page-break-before:always;"> </p>

            <div class="row" style="border-bottom: 1px solid black;">
                <div class="col-xs-6 col-xs-offset-3 text-center">
                    <h1>RESUMEN PRESUPUESTO</h1>
                    <h2 style="">Panatta Dise침o Comercial</h2>
                </div>
            </div>
            <div class="row" style="margin-top: 200px;">
                <div class="col-xs-6 col-xs-offset-3">
                    <table class="table table-condensed">
                        <tr>
                            <td><strong>Cliente Potencial</strong></td>
                            <td class="text-right">
                                <span t-field="o.partner_id" />
                            </td>
                        </tr>
                        <tr>
                            <td><strong>
                                <span t-if="o.state not in ['draft','sent']">Pedido de Venta</span>
                                <span t-if="o.state in ['draft','sent']">Presupuesto</span>
                            </strong></td>
                            <td class="text-right">
                                <span t-field="o.name"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            
            
            <div class="row">
                <div class="col-xs-6 col-xs-offset-3">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td><strong>Total Proyecto</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.pricelist_id.currency_id&quot;}"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <p style="font-size:80%; margin-top:50px;" t-field="o.note"/>
            <p t-if="o.payment_term.note">
                <strong>Payment Term:</strong>
                <span t-field="o.payment_term.note"/>
            </p>
            <div class="oe_structure"/>
        
        </div>
</template>

<template id="report_presupuesto_completo_sinv">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'panatta_ext.report_presupuesto_completo_sinv_document')"/>
        </t>
    </t>
</template>
</data>
</openerp>
